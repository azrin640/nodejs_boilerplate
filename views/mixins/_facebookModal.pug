mixin facebookModal( user = {} )
  
  div(class="modal modal-facebook")
    .modal-background
    .modal-header
    .modal-content
      .card
        .card-header
          .card-header-title
            h3 Facebook
        .card-content
          div(class="modal-message")
          form(class="modal-facebook-form" action=`/facebook/update/${user && user._id}` method="POST")
            
            input(type="hidden" name="id" value=`${user && user._id}`)          
            // Facebook Id
            div(class="field")                
                p(class="control has-icons-left has-icons-right")
                  input(class="input" type="text" name="profile-facebook" placeholder="Cth: azrin_amin" value=user && user.facebook required)
                  span(class="icon is-small is-left")
                    i(class="fab fa-facebook-square")
                  span(class="icon is-small is-right")
                    i(class="fas fa-check")
                  
          // Buttons     
          div(class="field is-grouped")
            div(class="buttons is-right")
              // Update Facebook
              a(class="button is-primary modal-facebook-button" type="submit") 
                i(class="fas fa-sign-in-alt") 
                span &nbsp;Update Facebook  
                
              // Cancel Close Button               
              a(class="button is-danger modal-close-facebook") 
                i(class="fas fa-times")
                span &nbsp;Cancel
                
          // Message 
          div(class="message")
    .modal-footer            
    button(class="modal-close modal-close-facebook is-large" aria-label="close") 
