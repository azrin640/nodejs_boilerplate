mixin registerBookForm(book = {})

  form(class="bookform" action="/admin/daftar-buku" method="POST" enctype="multipart/form-data")
    .field
      .control 
        input(class="input is-normal" type="text" name="title" placeholder="Tajuk")
    .field
      .control 
        input(class="input is-normal" type="text" name="subtitle" placeholder="Sub Tajuk")
    .field
      .control
        textarea(class="textarea is-normal" type="text" name="synopsis" placeholder="Sinopsis")
    .field
      .control 
        input(class="input is-normal" type="text" name="tags" placeholder="tags")
    input(class="bookform__file" type="file" name="photo" id="photo")
    input(type="hidden" name="author" value=user._id)
    .field
      .control 
        button(class="button is-primary bookform__submit" type="submit") Daftar Buku 
